<style>
  section{
  background: white;
  padding: 10px 10px;
  max-width: 100%;
}


iframe {
  width: 100%;
  height: 500px;
  border: 1px solid black;
}


menu{
  width: 100%;
  padding: 5px 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, 50px);
  gap: 5px;
}

menu div{
  position: relative;
  display: inline-block;
}
menu div input{
  cursor: pointer;
  opacity: 0;
  position:absolute;
  left:0;
  top:0;
  width:100%
}
menu div a{
  width: 100%;
}

menu a{
  border: none;
  outline: none;
  background-color: transparent;
  font-size: 17px;
  padding: 5px;
  transition: 0.2s background-color;
  cursor: pointer;
}

menu a:hover,
menu div:hover{
  border-radius: 3px;
  background-color: rgb(223, 223, 223);
}
</style>
<form>
  <main class="crearpost">
    <h1>Nuevo tema</h1>
    <h2>Foro: <a style="color: rgb(255, 45, 8);" href="/foros/<%= data.id%>/1/"><%= data.foro%></a></h2>
    <div>
      <h2>Título:</h2>
      <input type="text" class="title" required placeholder="Escribe aquí el titulo...">
    </div>
    <section id="texteditor"></section>
    <input type="text"  id="foroid" hidden value="<%= data.id %>">
    <button class="button gb" type="submit">Publicar mensaje</button>
  </main>
</form>
