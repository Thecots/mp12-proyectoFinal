<% if (typeof(login) == 'undefined') { %>
  <header>
    <div class="_logo" onclick="window.location.href='/'">
      <img src="https://img.icons8.com/ios-filled/100/000000/gorilla.png">
      <h1>PROJECT MONKEY</h1>
    </div>
    <% if (!session.ok) { %>
      <!-- session false -->
      <div class="sessionoff">
        <a href="/login">Iniciar sesión</a>
        <a href="/register">Crear cuenta</a>
      </div>
    <% }else{ %>
      <!-- session true -->
      <div class="sessionon">
        <div class="img">
          <div>
            <img src="<%= session.picture %>" alt="">
          </div>
        </div>
        <h1><%= session.username %></h1>
        <nav>
          <li><a href="/profile/<%= session.username %>">Perfil</a></li>
          <span></span>
          <li><a onclick="cerrarSession()">Cerrar sesión</a></li>
        </nav>
      </div>
    <% } %>
  </header>
  <section class="menu">
    <nav>
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/">Noticias</a></li>
        <li><a href="/">Perfil</a></li>
      </ul>
    </nav>
  </section>
  <section class="navigation">
    <a href="/">Inicio</a>
    <% if (typeof(categoria) != "undefined"){%>
      / <a href="/foros/<%=data.id%>/1/"><%=data.foro%></a>
    <% }%>
    <% if (typeof(crearpost) != "undefined"){%>
      / <a href="/foros/<%=data.id%>/1/"><%= data.foro%></a>
      / <a href="//nuevo_post/<%=data.id%>/">crear post</a>
    <% }%>
    <% if (typeof(post) != "undefined"){%>
      / <a href="/foros/<%=data.foroid%>/1/"><%= data.foro%></a>
      / <a href="/foro/tema/<%=data.foroid%>/<%=data.id%>/"><%= data.post.title %></a>
    <% }%>
    <% if (typeof(Perfil) != "undefined"){%>
      / <a href="/foros/<%=data.id%>/1/"><%= 1 %></a>
    <% }%>    
  </section>
<% } %>