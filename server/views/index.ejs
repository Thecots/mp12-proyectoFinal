

<main>
  <section>
   <% data.cat.forEach(n => { %>
    <div class="foro">
      <h1><%= n %></h1>
      <% data.sql.filter(g => g.categoria == n).forEach((e,i) =>{%>
        <div <% if ((i+1) == data.sql.filter(g => g.categoria == n).length) { %> style="border: 0;" <% } %> onclick="window.location.href = '/foros/<%= e.id %>/'">
          <div <%=  `style=background:${e.color};` %>  class="img">
            <img src="<%= e.image %>">
          </div>
          <h2><%= e.name %></h2>
          <h3><%= e.description %></h3>
        </div>
      <% }) %>
    </div>
   <% }) %>
  </section>
</main>

